{
  "name": "web-regression",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "lint": "eslint 'tests/**/*.ts'",
    "lint:fix": "eslint --fix 'tests/**/*.ts'",
    "prettify": "prettier --write \"**/*.ts\"",
    "clean-report": "npx allure generate --clean ./allure-results",
    "open-report": "npm run clean-report && npx allure open",
    "report": "npm run clean-report && npm run open-report",
    "test": "echo \"Error: no test specified\" && exit 1",
    "wdio": "wdio run ./wdio.conf.ts --cucumberOpts.tags"
  },
  "keywords": [
    "webdriverio",
    "nodejs",
    "Typescript",
    "cucumber"
  ],
  "author": "",
  "dependencies": {
    "@wdio/cli": "^8.16.7",
    "@wdio/types": "^8.36.1",
    "allure": "^0.0.0",
    "chromedriver": "^123.0.4",
    "esm": "^3.2.25"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@wdio/allure-reporter": "^8.38.2",
    "@wdio/cucumber-framework": "^8.16.7",
    "@wdio/local-runner": "^8.16.7",
    "@wdio/spec-reporter": "^8.16.7",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "lint-staged": "^13.2.2",
    "pinst": "^2.1.6",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run prettify"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "prettier --write"
    ]
  }
}
